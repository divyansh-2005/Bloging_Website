<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>    
    <title>HomePage</title>
    <style>
        .card-img-wrapper {
            position: relative;
            overflow: hidden;
            padding-top: 56.25%; /* 16:9 aspect ratio */
        }

        .card-img-top {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %> 
    
    <div class="container mt-3">
      <div class="row g-4"> <!-- g-4 adds gutter spacing -->
        <% blogs.forEach(blog => { %>
          <div class="col-12 col-sm-6 col-md-4"> <!-- Responsive columns -->
            <div class="card">
                <div class="card-img-wrapper">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
          </div>   
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %> 
</body>
</html>
